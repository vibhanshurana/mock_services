<div class="container">
  <h2>List of Mock Services</h2>
  <div class="btn btn-default">
    <%= link_to 'Add a New Service', new_mock_service_path, :class => "btn" %>
  </div>
  <table class="table table-striped">
    <thead>
      <tr>
        <th>Title</th>
        <th>Code</th>
        <th>URL</th>
        <th colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @mock_services.each do |mock_service| %>
        <tr>
          <td><%= mock_service.title %></td>
          <td><%= mock_service.code %></td>
          <td><%= mock_service.url %></td>
          <td><%= link_to 'Show', mock_service_path(mock_service) %></td>
          <td>
            <%= link_to 'Edit', edit_mock_service_path(mock_service) %>
          </td>
          <td><%= link_to 'Destroy', mock_service_path(mock_service),
                  method: :delete,
                  data: { confirm: 'Are you sure?' } %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>